{
  "scopeName": "speechmarkdown-js-json-yaml.injection",
  "injectionSelector": [
    "L:string.quoted.double.js",
    "L:string.quoted.single.js",
    "L:string.quoted.double.json",
    "L:string.quoted.single.json",
    "L:string.unquoted.plain.out.yaml",
    "L:string.unquoted.plain.in.yaml",
    "L:string.unquoted.block.yaml",
    "L:string.quoted.double.yaml",
    "L:string.quoted.single.yaml",
    "L:string.quoted.double.ts",
    "L:string.quoted.single.ts"
  ],

  "patterns": [{ "include": "#smd-expressions" }],
  "repository": {
    "smd-expressions": {
      "patterns": [
        { "include": "#paren-expression" },
        { "include": "#hash-expression" }
      ]
    },
    "paren-expression": {
      "begin": "\\(",
      "end": "\\)",
      "name": "punctuation.speechmarkdown.parens",
      "beginCaptures": {
        "0": { "name": "meta.embedded.meta.brace.round.speechmarkdown.open" }
      },
      "endCaptures": {
        "0": {
          "name": "meta.embedded.meta.brace.round.speechmarkdown.close"
        }
      },
      "patterns": [
        {
          "name": "meta.embedded.meta.brace.round.speechmarkdown.open",
          "match": "\\("
        },
        {
          "name": "meta.embedded.meta.brace.round.speechmarkdown.close",
          "match": "\\)"
        }
      ]
    },
    "hash-expression": {
      "begin": "\\[",
      "end": "\\]",
      "name": "meta.embedded.meta.brace.square.speechmarkdown.hash-bracket",
      "contentname": "speechmarkdown.modifier.content",
      "beginCaptures": {
        "0": {
          "name": "punctuation.hash-bracket.open"
        }
      },
      "endCaptures": {
        "0": { "name": "punctuation.hash-bracket.close" }
      },
      "patterns": [
        { "include": "#expression" },
        {
          "name": "entity.name.function.speechmarkdown.entity",
          "match": "(disappointed|dj|emphasis|excited|interjection|newscaster|pitch|voice)"
        },
        {
          "name": "entity.name.function.speechmarkdown.modifier",
          "match": "(address|audio|break|cardinal|characters|date|disappointed|emphasis|excited|expletive|bleep|fraction|interjection|ipa|lang|number|ordinal|phone|telephone|pitch|rate|sub|time|unit|voice|volume|vol|whisper)"
        },
        {
          "name": "keyword.operator.assignment.speechmarkdown",
          "match": ":"
        }
      ]
    }
  }
}
