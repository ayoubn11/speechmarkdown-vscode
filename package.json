{
  "name": "speechmarkdown-vscode",
  "displayName": "Speech Markdown",
  "publisher": "WhetstoneTechnologiesInc",
  "description": "Language features for Speech Markdown",
  "icon": "images/smd-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/speechmarkdown/speechmarkdown-vscode.git"
  },
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "license": "See license in LICENSE",
  "version": "0.0.2",
  "preview": true,
  "author": {
    "name": "johniwasz"
  },
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Snippets",
    "Formatters"
  ],
  "bugs": {
    "url": "https://github.com/speechmarkdown/speechmarkdown-vscode/issues"
  },
  "keywords": [
    "ssml",
    "speech markdown"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "entity.name.function.speechmarkdown.modifier",
        "description": "Color of Speech Markdown modifiers.",
        "defaults": {
          "dark": "#a6e22eff",
          "light": "#4a6b08",
          "highContrast": "#010203"
        }
      }
    ],
    "activationEvents": [
      "onLanguage:markdown"
    ],
    "main": "./out/extension.js",
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets.json"
      },
      {
        "language": "typescript",
        "path": "./snippets.json"
      },
      {
        "language": "json",
        "path": "./snippets.json"
      },
      {
        "language": "speechmarkdowm",
        "path": "./snippets.json"
      },
      {
        "language": "yaml",
        "path": "./snippets.json"
      }
    ],
    "languages": [
      {
        "id": "speechmarkdown",
        "aliases": [
          "Speech Markdown",
          "speechmarkdown"
        ],
        "extensions": [
          ".smd",
          ".speechmarkdown"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "speechmarkdown",
        "scopeName": "source.speechmarkdown",
        "path": "./syntaxes/speechmarkdown-expressions.json"
      },
      {
        "path": "./syntaxes/js-json-yaml-injection.json",
        "scopeName": "speechmarkdown-js-json-yaml.injection",
        "injectTo": [
          "source.js",
          "source.json",
          "source.yaml",
          "text.yaml.jinja",
          "source.ts"
        ],
        "embeddedLanguages": {
          "string.quoted.double.js": "speechmarkdown-lang",
          "string.quoted.single.js": "speechmarkdown-lang",
          "string.quoted.double.json": "speechmarkdown-lang",
          "string.quoted.single.json": "speechmarkdown-lang",
          "string.unquoted.plain.out.yaml": "speechmarkdown-lang",
          "string.unquoted.plain.in.yaml": "speechmarkdown-lang",
          "string.unquoted.block.yaml": "speechmarkdown-lang",
          "string.quoted.double.yaml": "speechmarkdown-lang",
          "string.quoted.single.yaml": "speechmarkdown-lang",
          "string.quoted.double.ts": "speechmarkdown-lang",
          "string.quoted.single.ts": "speechmarkdown-lang"
        },
        "tokenTypes": {
          "string.quoted.double.js": "other",
          "string.quoted.single.js": "other",
          "string.quoted.double.json": "other",
          "string.quoted.single.json": "other",
          "string.unquoted.plain.out.yaml": "other",
          "string.unquoted.plain.in.yaml": "other",
          "string.unquoted.block.yaml": "other",
          "string.quoted.double.yaml": "other",
          "string.quoted.single.yaml": "other",
          "string.quoted.double.ts": "other",
          "string.quoted.single.ts": "other"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint -c .eslintrc.js --ext .ts ./"
  },
  "devDependencies": {
    "@types/node": "^10.17.14",
    "@types/vscode": "^1.32.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "typescript": "^3.7.5"
  },
  "languages": [
    {
      "id": "speechmarkdown",
      "aliases": [
        "Speech Markdown",
        "speechmarkdown"
      ],
      "extensions": [
        ".smd",
        ".speechmarkdown"
      ],
      "configuration": "./language-configuration.json"
    }
  ],
  "grammars": [
    {
      "language": "speechmarkdown",
      "scopeName": "source.speechmarkdown",
      "path": "./syntaxes/speechmarkdown-expressions.json"
    },
    {
      "path": "./syntaxes/js-json-yaml-injection.json",
      "scopeName": "speechmarkdown-js-json-yaml.injection",
      "injectTo": [
        "source.js",
        "source.json",
        "source.yaml",
        "text.yaml.jinja",
        "source.ts"
      ],
      "embeddedLanguages": {
        "string.quoted.double.js": "speechmarkdown-lang"
      },
      "tokenTypes": {
        "string.quoted.double.js": "other"
      }
    }
  ]
}
